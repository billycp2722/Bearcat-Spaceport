                            <TextBlock Text="GPS Longitude" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center" Foreground="White" VerticalAlignment="Center" FontSize="18" Margin="10"/>
                            <TextBox Style="{StaticResource TextboxCorner}" Height="30" Grid.Row="2" Grid.Column="1" Margin="10"/>

                            <TextBlock Text="Altitude" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Center" Foreground="White" VerticalAlignment="Center" FontSize="18" Margin="10"/>
                            <TextBox Style="{StaticResource TextboxCorner}" Height="30" Grid.Row="3" Grid.Column="1" Margin="10"/>

                            <TextBox Grid.Column="1" Grid.Row="4" Width="23" Height="23" Margin="10" HorizontalAlignment="Left" BorderBrush="White" BorderThickness="2" Background="{Binding ParachuteDeployCap2}" IsReadOnly="True" Style="{StaticResource Lightbox}" />
                            <TextBlock Text="Parachute Deployment" Grid.Column="0" Grid.Row="4" HorizontalAlignment="Center" Foreground="White" VerticalAlignment="Center" FontSize="18" Margin="10"/>

                            <s3D:SciChart3DSurface Grid.ColumnSpan="2" Grid.Row="6" Name="sciChart3DSurface3" Margin="10"
                                    s3D:SceneObjects="{Binding SceneObj}"
                                    BorderThickness="1"
                                    WorldDimensions="10,10,10" >

                                <s3D:SciChart3DSurface.Camera>
                                    <s3D:Camera3D x:Name="Camera3D3" ZoomToFitOnAttach="True"/>
                                </s3D:SciChart3DSurface.Camera>

                                <s3D:SciChart3DSurface.XAxis>
                                    <s3D:NumericAxis3D DrawLabels="True"
                                        DrawMajorTicks="True"
                                        DrawMinorGridLines="False"
                                        DrawMinorTicks="False"
                                        PlaneBorderThickness="0.1"/>
                                </s3D:SciChart3DSurface.XAxis>

                                <s3D:SciChart3DSurface.YAxis>
                                    <s3D:NumericAxis3D DrawLabels="True"
                                        DrawMajorTicks="True"
                                        DrawMinorGridLines="False"
                                        DrawMinorTicks="False" 
                                        PlaneBorderThickness="0.1"/>
                                </s3D:SciChart3DSurface.YAxis>

                                <s3D:SciChart3DSurface.ZAxis>
                                    <s3D:NumericAxis3D DrawLabels="True"
                                        DrawMajorTicks="True"
                                        DrawMinorGridLines="False"
                                        DrawMinorTicks="False" 
                                        PlaneBorderThickness=".1"/>
                                </s3D:SciChart3DSurface.ZAxis>

                                <s3D:SciChart3DSurface.ChartModifier>
                                    <s3D:ModifierGroup3D>
                                        <s3D:OrbitModifier3D ExecuteOn="MouseLeftButton"/>
                                        <s3D:MouseWheelZoomModifier3D/>
                                        <s3D:ZoomExtentsModifier3D AnimateDurationMs="500" ResetPosition="10,10,10" ResetTarget="0,0,0"/>
                                    </s3D:ModifierGroup3D>
                                </s3D:SciChart3DSurface.ChartModifier>





                            </s3D:SciChart3DSurface>
                        </Grid>
                    </GroupBox>

                    <Grid Grid.Column="4" Grid.RowSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <controls:Graph1 Grid.Row="0" Margin="5"/>
                        <controls:Graph2 Grid.Row="1" Margin="5"/>
                        <controls:Graph3 Grid.Row="2" Margin="5"/>
                        <controls:Graph4 Grid.Row="3" Margin="5"/>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="Hardware Setup">
                
            </TabItem>

            <TabItem Header="Data Playback">
                
            </TabItem>
        </TabControl>
        
    </Grid>
    

</Window>
